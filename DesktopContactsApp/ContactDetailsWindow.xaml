<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="ContactDetailsWindow" Height="210" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Phone:"/>
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,5"/>
            <Button x:Name="updateButton" Content="Update" Margin="0,0,0,5" Click="UpdateButton_Click"/>
            <Button x:Name="deleteButton" Content="Delete" Margin="0,0,0,5" Background="Red" Foreground="White" Click="DeleteButton_Click"/>
            <Button x:Name="CancelBtn" Content="Cancel" Click="CancelBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
