<Window x:Class="DesktopContactsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="10">
        <Button x:Name="NewContactBtn" Content="New contact" Click="NewContactBtn_Click"/>
        <TextBox x:Name="filterTextBox" Margin="0,5,0,5" TextChanged="FilterTextBox_TextChanged"/>
        <ListView x:Name="contactsListView" Margin="0,5,0,0" Height="280" SelectionChanged="ContactsListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="20" FontWeight="Bold" Text="{Binding Name}"/>
                        <TextBlock FontSize="15" Foreground="DodgerBlue" Text="{Binding Email}"/>
                        <TextBlock FontSize="15" FontStyle="Italic" Text="{Binding Phone}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
